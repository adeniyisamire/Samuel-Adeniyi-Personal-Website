// assets/script.js
document.addEventListener('DOMContentLoaded', function () {
  // Year in footer
  const yearEl = document.getElementById('year');
  if (yearEl) yearEl.textContent = new Date().getFullYear();

  // Menu toggle for mobile (if nav is hidden)
  const menuBtn = document.getElementById('menu-toggle');
  const nav = document.getElementById('nav');
  if (menuBtn && nav) {
    menuBtn.addEventListener('click', () => {
      nav.classList.toggle('open');
      if (nav.classList.contains('open')) nav.style.display = 'block';
      else nav.style.display = '';
    });
  }

  // Copy email button
  const copyBtn = document.getElementById('copy-email');
  if (copyBtn) {
    copyBtn.addEventListener('click', () => {
      navigator.clipboard.writeText('adeniyisamire@outlook.com').then(() => {
        copyBtn.textContent = 'Copied!';
        setTimeout(() => (copyBtn.textContent = 'Copy email'), 2000);
      });
    });
  }

  // Theme toggle simple (light/dark) - stores in localStorage
  const themeToggle = document.getElementById('theme-toggle');
  if (themeToggle) {
    themeToggle.addEventListener('click', () => {
      const root = document.documentElement;
      if (root.style.getPropertyValue('--bg') === '#ffffff') {
        // switch to dark
        root.style.setProperty('--bg', '#06070a');
        root.style.setProperty('--card', '#0f1720');
        themeToggle.textContent = 'ðŸŒ“';
      } else {
        // switch to light
        root.style.setProperty('--bg', '#ffffff');
        root.style.setProperty('--card', '#f7fafc');
        themeToggle.textContent = 'ðŸŒž';
      }
    });
  }
});
